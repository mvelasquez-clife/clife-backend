                    )
                )
            ).append(xlstbody).attr('id', 'table-export');
            $('#detalle-pedidos').empty().append(
                $('<div>').append(
                    $('<div>').append(
                        $('<table>').append(
                            $('<thead>').append(
                                $('<tr>').append(
                                    $('<th>').text('Pedido')
                                ).append(
                                    $('<th>').text('Fecha pedido')
                                ).append(
                                    $('<th>').text('Boleta')
                                ).append(
                                    $('<th>').text('Fecha facturaci√≥n')
                                ).append(
                                    $('<th>').text('RUC/DNI')
                                ).append(
                                    $('<th>').text('Cliente')
                                ).append(
                                    $('<th>').text('Direcci√≥n')
                                ).append(
                                    $('<th>').text('Departamento')
                                ).append(
                                    $('<th>').text('Provincia')
                                ).append(
                                    $('<th>').text('Distrito')
                                ).append(
                                    $('<th>').text('Tel√©fono')
                                ).append(
                                    $('<th>').text('Importe')
                                ).append(
