        <table style="font-family:Arial,Verdana;font-size:7pt;width:100%;">
            <thead>
                <tr>
                    <% filas2.forEach(function(fila) { %>
                        <td style="text-align:left;"><b><%-fila.DE_CREADOR%></b></td>
                        <td style="text-align:left;"><b><%-fila.DE_REVISADO%></b></td>
                        <td style="text-align:left;"><b><%-fila.DE_APRUEBA%></b></td>
